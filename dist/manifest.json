{
    "name": "inboxy: Inbox Bundles for Gmail",
    "version": "1.5.2",
    "description": "Adds Google Inbox bundles to Gmail",
    "homepage_url": "https://www.inboxymail.com",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
        "matches": ["*://mail.google.com/mail/*"],
        "js": ["content.js"],
        "css": ["style.css"],
        "run_at": "document_start",
        "all_frames": false
    }],
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": false,
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "declarativeContent"
    ],
    "page_action": {
        "default_icon": {
            "16": "icons/inboxy.png",
            "24": "icons/inboxy@1.5x.png",
            "32": "icons/inboxy@2x.png"
        },
        "default_popup": "popup/popup.html",
        "show_matches": ["*://mail.google.com/mail/*"]
    },
    "icons": {
        "16": "icons/inboxy.png",
        "32": "icons/inboxy@2x.png",
        "48": "icons/inboxy@3x.png",
        "128": "icons/inboxy@8x.png"
    },
    "web_accessible_resources": [
        "assets/*.svg"
    ],
    "manifest_version": 2
}